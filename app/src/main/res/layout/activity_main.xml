<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" tools:context="cn.gloud.invoiceManager.MainActivity">

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="金额"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="6dp" tools:layout_editor_absoluteY="2dp"/>
    <TextView
        android:id="@+id/push_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="开票日期"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="6dp" tools:layout_editor_absoluteY="27dp"/>
    <TextView
        android:id="@+id/check_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="校验码"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="6dp" tools:layout_editor_absoluteY="75dp"/>
    <TextView
        android:id="@+id/lef_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="发票最左的号"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="6dp" tools:layout_editor_absoluteY="101dp"/>

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="发票号"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="6dp" tools:layout_editor_absoluteY="129dp"/>


    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="199dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="报销人"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="297dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <Button
            android:id="@+id/scan_qrcode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="扫描"
            tools:layout_editor_absoluteX="16dp" tools:layout_editor_absoluteY="443dp"/>
        <Button
            android:id="@+id/save_info_btn"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content" android:text="存储"
            tools:layout_editor_absoluteX="251dp" tools:layout_editor_absoluteY="443dp"/>

    </LinearLayout>


</LinearLayout>
